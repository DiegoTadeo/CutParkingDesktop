<Application x:Class="CutParking.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Tema de Material Design -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>

                <!-- Definir Color Primario y Secundario -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.DeepPurple.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Amber.xaml"/>

                <!-- Estilos Generales -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Aplicar el color primario y secundario -->
            <Color x:Key="PrimaryColor">#673AB7</Color>
            <!-- Deep Purple -->
            <Color x:Key="SecondaryColor">#FFC107</Color>
            <!-- Amber -->

            <!-- Aplicar colores al tema -->
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="{StaticResource SecondaryColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
